<header class="header_style">
    <div class="row">
        <h2>Edit User</h2>
    </div>
</header>
<%= render 'layouts/error_messages',target: @user%>
<div class="row">
    <div class="large-8 columns">
        <%= form_for @user, html: {:class => "custom"} do |f| %>
            <fieldset class="panel summary radius add_shadow">
                <legend>Name</legend>
                <div class="row">
                    <div class="large-4 columns">
                        <%= f.label :first_name,class:"label" %>
                        <%= f.text_field :first_name %>
                    </div>
                </div>
                <div class="row">
                    <div class="large-4 columns">
                        <%= f.label :last_name,class:"label" %>
                        <%= f.text_field :last_name %>
                    </div>
                </div>
                <div class="row">
                    <div class="large-5 columns">
                        <%= f.label :password,"Password (leave blank to keep current)",class:"label" %>
                        <%=f.password_field :password%>
                        <%= f.label :password_confirmation,class:"label" %>
                        <%=f.password_field :password_confirmation%>
                    </div>
                </div>
            </fieldset>
            <fieldset class="panel summary radius add_shadow">
                <legend>Address</legend>
                <div class="row">
                    <div class="large-4 columns">
                        <%= f.label :address,class:"label" %>
                        <%= f.text_field :address %>
                    </div>
                </div>
                <div class="row">
                    <div class="large-4 columns">
                        <%= f.label :addess2,class:"label" %>
                        <%= f.text_field :address2 %>
                    </div>
                </div>
                <div class="row">
                    <div class="large-4 columns">
                        <%= f.label :city,class:"label" %>
                        <%= f.text_field :city %>
                    </div>
                </div>
                <div class="row">
                    <div class="large-4 columns">
                        <%= f.label :province,class:"label" %>
                        <%= f.select(:province, UsersHelper::CAN_PRO, :html => {:class => "customDropdown"}) %>
                    </div>
                </div>
                <div class="row">
                    <div class="large-4 columns">
                        <%= f.label :postal,class:"label" %>
                        <%= f.text_field :postal %>
                    </div>
                </div>
                <div class="row">
                    <div class="large-4 columns">
                        <%= f.label :country,class:"label" %>
                        <%= f.select(:home_ountry, [["Canada", "Canada"], ["United States", "United States"]]) %>
                    </div>
                </div>
            </fieldset >
            <div class="row">
                <div class="large-4 columns">
                    <%= f.submit "Update", class: "small button" %>
                </div>
            </div>
        <% end %>
    </div>
</div>